<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		{% block stylesheets %}
			<link href="{{ asset("/css/reset.css" )}}" rel="stylesheet">
			<link href="{{ asset("/css/style.css" )}}" rel="stylesheet">
		{% endblock %}

		{% block javascripts %}
			<script src="{{ asset("/js/script.js" )}}" defer></script>
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<header class="header">
				<h1 class="text-lg">
					<a href="{{ path('homepage') }}">To Do List app</a>
				</h1>
				<button class="nav__open" id="js-open-menu">
					<span class="line-1"></span>
					<span class="line-2"></span>
					<span class="line-3"></span>
				</button>
				<nav class="nav" id='js-menu'>
					<button class="mb-2 text-bold nav__close" id="js-close-menu">Fermer</button>
					{% set current_path = app.request.get('_route') %}
					<a href="{{ path('homepage') }}" {% if current_path == "homepage" %} class="active" {% endif %}>Accueil</a>
					<a href="{{ path('task_list') }}" {% if current_path == "task_list" %} class="active" {% endif %}>Tâches</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('user_list') }}" {% if current_path == "user_list" %} class="active" {% endif %}>Utilisateurs</a>
					{% endif %}
					<a href="{{ path('logout') }}" class="text-error">Déconnexion</a>
				</nav>
			</header>
		{% endblock %}

		<main class="main">
			<div class="container">
				{% for message in app.flashes('success') %}
					<div class="flex">
						<div class="flex alert alert-success mb-2">
							{{ message }}
						</div>
					</div>
				{% endfor %}
				{% for message in app.flashes('warning') %}
					<div class="flex">
						<div class="alert alert-warning mb-2">
							{{ message }}
						</div>
					</div>
				{% endfor %}

				{% block body %}{% endblock %}
			</div>
		</main>
	</body>
</html>
