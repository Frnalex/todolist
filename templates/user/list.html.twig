{% extends 'base.html.twig' %}

{% block body %}
	<section class="section">
		<div class="section__header">
			<div class="flex space">
				<h1 class="text-md">Liste des utilisateurs</h1>
				<a href="{{ path('user_create') }}" class="button button-round">+</a>
			</div>
		</div>

		<div class="section__content w-100">
			{% if users|length == 0 %}
				<div class="alert alert-warning" role="alert">
					Il n'y a pas encore d'utilisateur enregistrÃ©.
				</div>
			{% else %}
				<table class="table">
					<thead>
						<tr>
							<th>Nom d'utilisateur</th>
							<th>Adresse d'utilisateur</th>
							<th class="align-right">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.username }}</td>
								<td>{{ user.email }}</td>
								<td class="align-right">
									<a href="{{ path('user_edit', {'id' : user.id}) }}" class="text-warning">Modifier</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% endif %}

		</div>

	</section>


{% endblock %}
